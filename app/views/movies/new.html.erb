<h1>New Movie Form</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
	<form action="/movies/create" method="post">
	  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  	Movie title: <input type="text" name="title" value="">
  	<br>
  	Genre: <select name="genre">
          	<option value="action">Action</option>
          	<option value="comedy">Comedy</option>
          	<option value="documentary">Documentary</option>
        	</select>
    Year Release: <input type="text" name="year_released" value="">
  	<br>
  	
  	Info URL: <input type="text" name="info_url" value="">
  	<br>
  	
  	<br><br>
  	<input type="submit" value="Create Now" class="btn btn-sm btn-primary">
   </form>
 </div>
</div>